import java.util.ArrayList;
public class Main {
    public static void main(String[] args) {
        ArrayList<String> fruits = new ArrayList<>();
        fruits.add("Apple");
        fruits.add("Banana");
        fruits.add("Orange");
        fruits.add(1, "Mango");
        int indexBanana = fruits.indexOf("Banana");
        if (indexBanana != -1) {
            fruits.set(indexBanana, "Grapes");
        }
        if (fruits.contains("Apple")) {
            System.out.println("Apple co ton tai trong danh sach");
        } else {
            System.out.println("Apple khong ton tai trong danh sach");
        }
        System.out.println("Danh sach trai cay: " + fruits);
    }
}
